{
    "manifest_version": 3,
    "name": "ColorSnatch",
    "description": "ColorSnatch: Your Ultimate Color Picker Tool. Select and collect multiple colors effortlessly from any website.",
    "version": "1.0",
    "action": {
        "default_popup": "index.html"
    },
    "icons": {
        "16": "icons/16px.png",
        "32": "icons/32px.png",
        "64": "icons/64px.png",
        "128": "icons/128px.png"
    },
    "permissions": [
        "storage",
        "clipboardWrite",
        "clipboardRead"
    ]
}
